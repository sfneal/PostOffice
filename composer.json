{
    "name": "sfneal/post-office",
    "description": "Email suite for Laravel applications with extended Mailable & Notification functionality",
    "keywords": [
        "sfneal",
        "post-office"
    ],
    "homepage": "https://github.com/sfneal/post-office",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Stephen Neal",
            "email": "stephen.neal14@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "^7.25",
        "sfneal/queueables": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sfneal\\PostOffice\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sfneal\\PostOffice\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
